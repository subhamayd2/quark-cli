{
  "name": "quark-cli",
  "version": "1.0.4",
  "description": "A simple cli tool to generate react components based on atomic folder structure.",
  "main": "./dist/quark.js",
  "types": "dist/quark.d.ts",
  "bin": {
    "quark": "./dist/quark"
  },
  "preferGlobal": true,
  "scripts": {
    "prestart": "npm run clean",
    "start": "tsc -w",
    "clean": "rimraf dist/** && copyfiles -u 1 src/quark src/config.json dist/",
    "build": "npm run clean && tsc",
    "eslint": "eslint src",
    "eslint:fix": "eslint --fix src",
    "dev": "npm i -g && quark -v",
    "prepublishOnly": "npm run build && npm version patch",
    "postpublish": "git push --follow-tags"
  },
  "author": {
    "name": "Subhamay Dutta",
    "email": "subhamay.live@live.com",
    "url": "https://github.com/subhamayd2"
  },
  "repository": "https://github.com/subhamayd2/quark-cli",
  "license": "ISC",
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/core-js": "^2.5.5",
    "@types/figlet": "^1.5.4",
    "@types/glob": "^7.2.0",
    "@types/inquirer": "^8.1.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsonc": "^2.0.0",
    "jsonc-eslint-parser": "^2.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "core-js": "^3.19.3",
    "figlet": "^1.5.2",
    "glob": "^7.2.0",
    "inquirer": "^8.2.0",
    "inquirer-search-list": "^1.2.6"
  }
}
