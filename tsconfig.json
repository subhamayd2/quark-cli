{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "lib": [
      "es2017",
      "es2015",
      "dom",
      "es6"
    ],
    "outDir": "dist",
    "module": "commonjs",
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "declaration": true,
  },
}